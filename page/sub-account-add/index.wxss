.contain {
  background-color: #efeff3;
}

.phone-alert-tile {
  padding: 30rpx 35rpx 20rpx 35rpx;
  font-size: 28rpx;
  color: rgb(53, 53, 53);
  border: 1px solid #ddd;
}

.phone-box {
  height: 88rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  background-color: #fff;
  line-height: 88rpx;
}

.phone-input-view {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  padding-left: 20rpx;
}

.phone-area-code {
  padding-left: 35rpx;
  width: 185rpx;
  border-right: 1px solid #ddd;
  font-size: 34rpx;
  color: rgb(53, 53, 53);
}

.phone-input {
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  color: rgb(179, 179, 179);
}

.verification-code-box {
  margin-top: 50rpx;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: #fff;
  margin-bottom: 40rpx;
}

.verification-btn {
  width: 220rpx;
  font-size: 34rpx;
  float: right;
  border:none;
  margin-left: 0rpx;
  margin-right: 0rpx;
}

.verification-title {
  padding-left: 35rpx;
  width: 140rpx;
  font-size: 34rpx;
  color: rgb(53, 53, 53);
}

.verification-number-input {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  padding-left: 20rpx;
  font-size: 30rpx;
}

.primary {
  margin: 0 35rpx;
}