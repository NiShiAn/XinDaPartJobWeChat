.contain {
  background-color: #fff;
  padding: 50rpx;
  width: 100%;
  height: 100%;
  font-size: 26rpx;
}

.job-list-box {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  overflow: hidden;
  justify-content: flex-start;
}

.job-item {
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  border: 1rpx solid rgb(217, 217, 217);
  margin-right: 20rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow:ellipsis;
  color: rgb(136, 136, 136);
}

.chooseItem {
  border: 1px solid rgb(230, 67, 64);
  color: rgb(230, 67, 64);
}