/**index.wxss**/
.container {
  background-color: #fff;
  min-height: 100%;
  overflow-x: hidden;
}
.block{
  width: 92%;
  margin: 0 auto;
  min-height: 200rpx;
}
.login-title{
  font-size: 46rpx;
  font-family: "MicrosoftYaHei";
  color: rgb(53, 53, 53);
  margin-top: 180rpx;
  display: block;
  margin-bottom: 80rpx;
}
.section{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
   margin-top: 30rpx;
   position: relative;
   border-bottom:2rpx solid  rgb(229, 229, 229);
}
.section__title{
  float: left;
  width: 120rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: left;
  padding-left: 0;
  padding-right: 0;
  font-size: 32rpx;
  color: rgb(53, 53, 53);
}
.section input{
  float: left;
  width: 540rpx;
  text-align: left;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  color: rgb(191, 191, 191);
}
.section span{
  display: block;
  width: 166rpx;
  height: 56rpx; 
  line-height: 56rpx; 
  background-color: rgb(248, 248, 248);
  border-radius: 6rpx;
  border:2rpx solid rgba(0, 0, 0, 0.28);
  position: absolute;
  right: 30rpx;
  font-size: 28rpx;
  color: rgb(53, 53, 53);
  text-align: center;
}
.checkbox{
  font-size: 26rpx;
  color: rgb(153, 153, 153);
  display: block;
  width: 100%;
  text-align: left;
  position: absolute;
  left: 4%;
  margin-top: 60rpx;
}
.agree{
  color: #1fb922;
}
.login-btn{
  display: block;
  width: 100%;
  margin-top:220rpx;
  clear: both;
  background: #1fb821;
}