.container {
  min-height: 100%;
  overflow-x: hidden;
  background-color: rgba(239, 239, 244, 1);
}

.recommendView {
  display: flex;
  flex-direction: row;
  background-color: #FFf;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 22rpx;
  justify-content: space-between;
  padding: 0 35rpx;
  color: rgb(0, 132, 255);
  border-bottom: 1px solid #ddd;
}



.recommend-btn {
  color: #fff;
  background-color: rgb(0, 132, 255);
  height: 50rpx;
  margin-top: 15rpx;
  line-height: 50rpx;
  width: 100rpx;
  text-align: center;
  border-radius: 10rpx;
  font-size: 22rpx;
}

/*个人信息  */
.head-view {
  padding: 25rpx 35rpx;
  background-size: 100% 100%;
  background-repeat: no-repeat;
}

.head-info {
  overflow: hidden;
}

.head-image-box {
  width: 102rpx;
  height: 102rpx;
  border-radius: 102rpx;
  overflow: hidden;
  float: left;
  text-align: center;
  background-color: #fff;
}

.head-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
}

.person-info-view {
  width: 40%;
  padding-left: 20rpx;
  float: left;
}

.integral-rule {
  display: inline-block;
  font-size: 20rpx;
  background-color: rgba(0, 0, 0, 0.4);
  border-radius: 3rpx;
  color: #fff;
  margin-top: 0rpx;
  padding:5rpx 10rpx;
}

.person-name {
  font-size: 28rpx;
  color:rgb(0, 0, 0);
}

.map-img {
  width: 68rpx;
  height: 68rpx;
  border-radius: 80rpx;
  float: right;
  margin-top: 10rpx;
}

.party-job-type {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 130rpx;
}

.my-party-job {
   color: #fff;
   width: 323rpx;
   height: 70rpx;
   line-height: 70rpx;
   text-align: center;
   background-color: #eb4144;
   font-size: 26rpx;
   border-radius: 8rpx;
}

.my-all-job {
   color: #fff;
   width: 323rpx;
   height: 70rpx;
   line-height: 70rpx;
   text-align: center;
   background-color: #eb4144;
   font-size: 26rpx;
   border-radius: 8rpx;
}

/*兼职岗位信息  */

.resume-info {
  background-color: #fff;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.resume-item {
  width: 50%;
  height: 150rpx;
  overflow: hidden;
  border-bottom: 1px solid #ddd;
  position: relative;
}

.line-shu {
  position: absolute;
  left: 2rpx;
  width: 2rpx;
  height: 70rpx;
  top: 40rpx;
  background-color: #ddd;
}

.resume-image {
  width: 45rpx;
  height: 45rpx;
  float: left;
  margin-left: 50rpx;
  margin-right: 50rpx;
  margin-top: 50rpx;
}

.resume-detail {
  float: left;
  margin-top: 25rpx;
}

.word-num {
  font-size: 28rpx;
}

.company {
  font-size: 26rpx;
}

.word-describe {
  font-size: 26rpx;
}

/*  优质雇主列表*/

.warning-img {
  width: 60rpx;
  height: 60rpx;
  margin-top: 10rpx;
}

.employer-item {
  width: 100%;
  height: 130rpx;
  padding-top: 30rpx;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #ddd;
}

.employer-item:last-child {
  border: none;
}

.employer-item-left {
  width: 20%;
  float: left;
}

.employer-head-img {
  width: 100rpx;
  height: 100rpx;
}

.employer-info {
  float: left;
  width: 60%;
}

.employer-name {
  font-size: 28rpx;
  color: rgb(53, 53, 53);
  margin-bottom: 20rpx;
}

.employer-class {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  font-size: 22rpx;
  color: rgb(136, 136, 136);
}

.employer-box {
  margin-right: 20rpx;
}

.employer-class-img , .employer-position-img {
  margin-right: 8rpx;
}

.employer-class-img , .employer-position-img {
  width: 22rpx;
  height: 22rpx;
}

.employer-go-img {
  width: 60rpx;
  height: 60rpx;
  float: right;
}

.good-employer-title {
  font-size: 34rpx;
  color: rgb(53, 53, 53);
  margin-left: 0rpx;
}

/*小程序列表  */
.program-item {
  margin: 40rpx 35rpx;
  overflow: hidden;
  height: 150rpx;
  border:1px solid #ddd;
  background-color: #fff;
  border-radius: 8rpx;
}

.col-20 {
  width: 20%;
  float: left;
}

.col-60 {
  width: 60%;
  float: left;
}

.program-img {
  width: 90rpx;
  height: 90rpx;
  border-radius: 90rpx;
  margin-top: 30rpx;
}

.img-center {
  text-align: center;
}

.change-city {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  margin: 40rpx 0;
  border:1px solid #ddd;
  font-size: 34rpx;
  color: rgb(53,53,53);
  text-align: center;
  background-color: #fff;
}

.employer-list {
  padding-left: 35rpx;
  border-bottom: 1rpx solid #ddd;
  background-color: #fff;
  margin: 0;
}

.program-title {
  font-size: 28rpx;
  color: rgb(53, 53, 53);
  margin-top: 35rpx;
  margin-bottom: 10rpx;
}

.program-describe {
  font-size: 22rpx;
  color: rgb(136, 136, 136);
}

.concer-btn {
  width: 120rpx;
  height: 60rpx;
  display: inline-block;
  margin-top: 45rpx;
  background-color: #00ad38;
  color: #fff;
  font-size: 26rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 8rpx;
}