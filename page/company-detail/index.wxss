/**index.wxss**/
.container {
  background-color: #efeff3;
  min-height: 100%;
  overflow-x: hidden;
}
/*********** 企业信息 **********/
.company-contenter{
  background-color: #fff;
  height: 200rpx;
  width: 92%;
  padding-left: 4%;
  padding-right: 4%;
  position: relative;
}
.company-img{
  width: 128rpx;
  height: 128rpx;
  border-radius: 10rpx;
  margin-top: 36rpx;
  float: left;
}
.company-info{
  width: 460rpx;
  height: 128rpx;
  margin-top: 36rpx;
  float: left;
  padding-left: 20rpx;
  
}
.company-name{
  font-size: 34rpx;
  color: rgb(0, 0, 0);
  display: block;
  font-weight: bold;
  height: 60rpx;
  line-height: 84rpx;
}
.company-leveal{
 display: block;
 height: 60rpx;
 line-height: 60rpx;
}
.leveal-icon{
  width: 30rpx;
  height: 30rpx;
}
.company-leveal span{
  font-size: 28rpx;
  color: rgb(53, 53, 53);
}
.com-detail-btn{
  display: block;
  content: " ";
  height: 20rpx;
  width: 20rpx;
  border-width: 4rpx 4rpx 0 0;
  border-color: #C8C8CD;
  border-style: solid;
  transform: rotate(45deg);
  position: absolute;
  top:87rpx;
  right:38rpx;
}
.company-block{
  width: 92%;
  padding-left: 4%;
  padding-right: 4%;
  min-height: 200rpx;
  background: white;
  margin-top: 16rpx;
  padding-bottom: 20rpx;
}
.c-name{
  display: block;
  width: 100%;
  font-size: 34rpx;
  color: rgb(53, 53, 53);
  height: 60rpx;
  line-height: 60rpx;
  padding-top: 20rpx;
}
.c-add{
  width: 100%;
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  color: rgb(136, 136, 136);
}
.c-add image{
 width: 24rpx;
 height:30rpx;
 float: left;
 display: block;
 margin-top: 15rpx;
}
.c-add span{
  width: 80%;
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  color: rgb(136, 136, 136);
   float: left;
   margin-left: 10rpx;
}
.c-desc{
  width: 100%;
  display: block;
  font-size: 26rpx;
  color: rgb(53, 53, 53);
  line-height: 40rpx;
}
.c-imgs{
  width: 100%;
  height: 120rpx;
  margin-top: 20rpx;
}
.c-imgs image{
  width: 114rpx;
  height: 114rpx;
  margin-right: 14rpx;
  border: 2rpx solid rgb(204, 204, 204);
}
.c-posts{
  width: 100%;
  min-height: 200rpx;
  margin-top: 16rpx;
}

/* 岗位列表样式调整 */
.post-item{
  width: 92%;
  height: 200rpx;
  background: #fff;
  margin-bottom: 20rpx;
  position: relative;
  padding-left: 4%;
  padding-right: 4%;
}
.leveal-img{
  width: 45rpx;
  height: 176rpx;
  position: absolute;
  top:-6rpx;
  left:20rpx;
}
.post-left{
  width: 70%;
  height: 100%;
  float: left
}
.post-name{
  width:100%;
  display: block;
  height: 60rpx;
  line-height: 88rpx;
  font-size: 34rpx;
  color: rgb(53, 53, 53);
}
.post-price{
  width: 100%;
  display: block;
  height: 70rpx;
  line-height: 80rpx;
  font-size: 38rpx;
  color: rgb(230, 67, 64);
  font-weight: bold;
}
.post-price span{
  font-size: 24rpx;
}
.post-min{
  width: 100%;
  display: block;
  height: 70rpx;
  line-height:43rpx;
  font-size: 22rpx;
  color: rgb(136, 136, 136);
}
.min-icon{
  width: 22rpx;
  height: 22rpx;
}
.post-right{
  width: 30%;
  height: 100%;
  float: left;
}
.up-row{
  width: 56rpx;
  height: 56rpx;
  border:3rpx solid rgb(223, 223, 223);
  border-radius: 10rpx;
  float: left;
  margin-top: 70rpx;  
  text-align: center 
}
.up-row image{
  width: 35rpx;
  height: 35rpx;
  display: inline-block;
  margin-top: 10rpx;
}
.post-toDetail{
  width: 118rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 10rpx;
  border:3rpx solid rgb(223, 223, 223);
  font-size: 26rpx; 
  margin-top: 70rpx;   
  float: right;    
  background: white;
  margin-left: 16.28rpx; 
  text-align: center                        
}
.gg-btn{
  background-color: rgb(230, 67, 64);
  border-color: rgb(230, 67, 64);
  color: white;
}
.wrz-btn{
  color: rgb(136, 136, 136);
}