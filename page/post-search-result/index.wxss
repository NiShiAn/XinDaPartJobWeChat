/**index.wxss**/
.container {
  background-color: #fff;
  min-height: 100%;
  overflow-x: hidden;
}
.search-container{
  height: 74rpx;
  width: 100%;
  background: #efeff4;
  padding-top:14rpx;
  position: relative;
}
.search-img{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top:28rpx;
  left: 32rpx;
}
.search-input{
  width: 74%;
  padding-left: 8%;
  height: 60rpx;
  background: white;
  margin-left: 3%;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: black;
}
.cancle{
  font-size: 32rpx;
  color: rgb(0, 194, 3);
  position: absolute;
  top:24rpx;
  right: 32rpx;
}

/*******  岗位列表样式 *****/
.post-container{
  width: 100%;
  min-height: 600rpx;
  background: #efeff4;
}
.post-item{
  width: 100%;
  height: 200rpx;
  background: #fff;
  margin-bottom: 20rpx;
  position: relative;
}
.leveal-img{
  width: 45rpx;
  height: 176rpx;
  position: absolute;
  top:-6rpx;
  left:20rpx;
}
.post-left{
  width: 80%;
  height: 100%;
  float: left
}
.post-name{
  width:85%;
  display: block;
  height: 60rpx;
  line-height: 88rpx;
  font-size: 34rpx;
  color: rgb(53, 53, 53);
  margin-left: 15%;
}
.post-price{
  width: 85%;
  display: block;
  height: 70rpx;
  line-height: 80rpx;
  font-size: 38rpx;
  color: rgb(230, 67, 64);
  font-weight: bold;
  margin-left: 15%;
}
.post-price span{
  font-size: 24rpx;
}
.post-min{
  width: 85%;
  display: block;
  height: 70rpx;
  line-height:43rpx;
  font-size: 22rpx;
  color: rgb(136, 136, 136);
  margin-left: 15%;
}
.min-icon{
  width: 22rpx;
  height: 22rpx;
}
.post-right{
  width: 20%;
  height: 100%;
  float: left;
}
.up-row{
  width: 56rpx;
  height: 56rpx;
  border:3rpx solid rgb(223, 223, 223);
  border-radius: 10rpx;
  float: left;
  margin-top: 70rpx;  
  text-align: center 
}
.up-row image{
  width: 35rpx;
  height: 35rpx;
  display: inline-block;
  margin-top: 10rpx;
}
.post-toDetail{
  width: 118rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 10rpx;
  border:3rpx solid rgb(223, 223, 223);
  font-size: 26rpx; 
  margin-top: 70rpx;   
  float: left;    
  background: white;
  margin-left: 16.28rpx; 
  text-align: center                        
}
.gg-btn{
  background-color: rgb(230, 67, 64);
  border-color: rgb(230, 67, 64);
  color: white;
}
.wrz-btn{
  color: rgb(136, 136, 136);
}

