.post-container{
  width: 100%;
  min-height: 600rpx;
  background: #efeff4;
}
.post-item{
  width: 100%;
  background: #fff;
  margin-bottom: 10rpx;
  padding: 20rpx 30rpx;
  overflow: hidden;
}

.post-left{
  width: 65%;
  height: 130rpx;
  float: left
}

.post-name{
  font-size: 34rpx;
  color: rgb(53, 53, 53);
  margin-bottom: 25rpx;
  margin-right:10rpx;
}

.post-min{
  width: 100%;
  display: block;
  font-size: 22rpx;
  color: rgb(136, 136, 136);
}

.min-icon{
  width: 22rpx;
  height: 22rpx;
}
.post-right{
  width: 35%;
  height: 130rpx;
  float: left;
}
.up-row{
  width: 56rpx;
  height: 56rpx;
  border:3rpx solid rgb(223, 223, 223);
  border-radius: 10rpx;
  float: left;
  margin-top: 30rpx;  
  text-align: center 
}
.up-row image{
  width: 35rpx;
  height: 35rpx;
  display: inline-block;
  margin-top: 10rpx;
}
.post-toDetail{
  width: 118rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 10rpx;
  border:3rpx solid rgb(223, 223, 223);
  font-size: 26rpx; 
  margin-top: 30rpx;   
  float: left;    
  background: white;
  margin-left: 16.28rpx; 
  text-align: center                        
}
.gg-btn{
  background-color: rgb(230, 67, 64);
  border-color: rgb(230, 67, 64);
  color: white;
}
.wrz-btn{
  color: rgb(136, 136, 136);
}

.margin-right-20 {
  margin-right: 20rpx;
}

.job-title-des {
  height: 70rpx;
  line-height: 70rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 0 30rpx; 
  border: 1rpx solid rgb(217, 217, 217);
  background-color: #f7f7f7;
}

.job-title {
  font-size: 26rpx;
  color: rgb(53, 53, 53);
}

.job-time {
  font-size: 22rpx;
  color: rgb(136, 136, 136);
}

.resume-info-box {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.head-img {
  width: 130rpx;
  height: 100rpx;
  margin-right:20rpx
}

.resume-name-box {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  height:30rpx;
  margin-bottom:10rpx;
}

.internship {
  font-size: 20rpx;
  padding: 5rpx 10rpx;
  background-color: #84d442;
  color: #fff;
  display:inline-block;
  height:30rpx;
  position: relative;
  top: -10rpx;
  border-radius: 8rpx;
}

.job-describe {
  font-size: 26rpx;
  color: rgb(136, 136, 136);
}

.resume-info-view {
  width: 100%;
  padding-top:5rpx;
}