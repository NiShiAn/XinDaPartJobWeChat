/**index.wxss**/
.container {
  background-color: #fff;
  min-height: 100%;
  overflow-x: hidden;
}
.search-container{
  height: 74rpx;
  width: 100%;
  background: #efeff4;
  padding-top:14rpx;
  position: relative;
}
.search-img{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top:28rpx;
  left: 32rpx;
}
.search-input{
  width: 74%;
  padding-left: 8%;
  height: 60rpx;
  background: white;
  margin-left: 3%;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: black;
}
.cancle{
  font-size: 32rpx;
  color: rgb(0, 194, 3);
  position: absolute;
  top:24rpx;
  right: 32rpx;
}

/*********** 企业信息 **********/
.company-contenter{
  background-color: #fff;
  height: 160rpx;
  width: 92%;
  padding-left: 4%;
  padding-right: 4%;
  position: relative;
  border-bottom: 1rpx solid rgb(217, 217, 217);
}
.company-img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  margin-top: 30rpx;
  float: left;
}
.company-info{
  width: 460rpx;
  height: 100rpx;
  margin-top: 30rpx;
  float: left;
  padding-left: 20rpx;
  
}
.company-name{
  font-size: 34rpx;
  color: rgb(0, 0, 0);
  display: block;
  height: 60rpx;
  line-height: 60rpx;
}
.company-leveal{
 display: block;
 height: 30rpx;
 line-height: 30rpx;
}
.leveal-icon{
  width: 22rpx;
  height: 22rpx;
}
.company-leveal span{
  font-size: 24rpx;
  color: rgb(53, 53, 53);
}
.com-detail-btn{
  display: block;
  content: " ";
  height: 20rpx;
  width: 20rpx;
  border-width: 4rpx 4rpx 0 0;
  border-color: #C8C8CD;
  border-style: solid;
  transform: rotate(45deg);
  position: absolute;
  top:70rpx;
  right:38rpx;
}

