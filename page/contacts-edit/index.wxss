/**index.wxss**/
.container {
  background-color: #efeff3;
  min-height: 100%;
  overflow-x: hidden;
}
.info-contenter{
  width: 92%;
  padding-left: 4%;
  padding-right: 4%;
  padding-bottom: 30rpx;
}
.info-title{
  width: 100%;
  margin-top: 30rpx;
  position: relative
}
.info-line{
  border-radius: 4rpx;
  background-color: rgb(230, 67, 64);
  width: 8rpx;
  height: 48rpx;
  float: left;
}
.info-text{
  display: block;
  width: 500rpx;
  height: 48rpx;
  line-height: 48rpx;
  margin-left: 24rpx;
   font-size: 34rpx;
  font-family: "MicrosoftYaHei";
  color: rgb(53, 53, 53);
}
.info-tip{
  color: #999999;
  font-size: 26rpx;
  position: absolute;
  left: 100rpx;
  top:10rpx;
}
.info-con{
  font-size: 28rpx;
  color: rgb(53, 53, 53);
  line-height: 250rpx;
  margin-top: 15rpx;
  background: #fff;
  height: 145rpx;
  width: 92%;
  padding-left: 4%;
  padding-right: 4%;
  padding-top: 31rpx;
}
.add-photo{
  width: 114rpx;
  height: 114rpx;
  border: 2rpx solid rgb(204, 204, 204);
}
.add-photo image{
  display: block;
  width: 80rpx;
  height: 80rpx;
  font-size: 100rpx;
  margin: 17rpx auto;
}

.info-list{
  width: 96%;
  padding-left: 4%;
  height: 290rpx;
  background: #fff;
  margin-top: 14rpx;
}
.section{
  width: 100%;
  height: 88rpx;
  border-bottom: 2rpx solid rgb(229, 229, 229);
  clear: both;
  margin-bottom: 0;
}
.section__title{
  font-size: 30rpx;
  color: rgb(53, 53, 53);
  width: 120rpx;
  height: 88rpx;
  line-height: 88rpx;
  display: block;
 float: left;
 text-align: left;
 padding-left: 0;
}
.section input{
  font-size: 30rpx;
  color: rgb(217, 217, 217);
  height: 88rpx;
  line-height: 88rpx;
  width: 400rpx;
  float: left;
}
.row{
  width: 150rpx;
  height: 88rpx;
  line-height: 88rpx;
  float: right;
  font-size: 30rpx;
  color: rgb(217, 217, 217);
}
.row span{
 height: 88rpx;
  line-height: 88rpx;
  display: block;
  float: left
}
.row image{
  width: 20rpx;
  height: 30rpx;
  display: block;
  float: left;
  margin-top: 27rpx;
  margin-left: 16rpx;
}
.primary{
  width: 92%;
  margin: 330rpx auto 0 auto;
}