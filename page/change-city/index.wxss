.contain {
  width: 100%;
  height: 100%;
  background-color: #efeff3;
}

.search-box {
  height: 88rpx;
  line-height: 88rpx;
  padding: 16rpx;
}

.search-bg-view {
  background-color: #fff;
  border: 1rpx solid rgb(217, 217, 217);
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  height: 56rpx;
}

.search-bg-view-start {
  background-color: #fff;
  border: 1rpx solid rgb(217, 217, 217);
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  height: 56rpx;
  padding-left: 35rpx;
}

.search-img {
  width: 25rpx;
  height: 25rpx;
  position: relative;
  top: 15rpx;
  margin-right: 15rpx;
}

.current-city-box {
  height: 80rpx;
  background-color: #fff;
  border:1rpx solid #ddd;
  line-height: 80rpx;
  padding-left: 35rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.city-name {
  font-size: 28rpx;
  color: rgb(53, 53, 53);
}

.city-list-nav {
  height: 50rpx;
  line-height: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  padding-left: 35rpx;
  background-color: #fcf9fd;
  border-bottom:0.5px solid #ddd;

}

.char-number {
  font-size: 28rpx;
  color: rgb(136, 136, 136);
  margin-right: 10rpx;
}

.city-item-list {
  background-color: #fff;
  padding-left: 35rpx;
}

.city-item {
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #ddd;
  font-size: 30rpx;
  color: rgb(53, 53, 53);
}

.search-title {
  width: 100%;
  font-size: 26rpx;
  color: rgb(178, 178, 178);
}

.search-alert {
  font-size: 26rpx;
  color: rgb(178, 178, 178);
  position: relative;
  top: -15rpx;
}