.post-container{
  width: 100%;
  min-height: 600rpx;
  background: #efeff4;
}
.post-item{
  width: 100%;
  background: #fff;
  margin-bottom: 10rpx;
  padding: 30rpx;
  overflow: hidden;
}

.post-left{
  width: 65%;
  height: 100%;
  float: left
}

.post-name{
  width:85%;
  display: block;
  font-size: 34rpx;
  color: rgb(53, 53, 53);
  margin-bottom: 30rpx;
}

.post-price{
  width: 85%;
  display: block;
  font-size: 28rpx;
  color: rgb(230, 67, 64);
}

.post-price span{
  font-size: 22rpx;
}
.post-min{
  width: 85%;
  display: block;
  font-size: 22rpx;
  color: rgb(136, 136, 136);
}

.min-icon{
  width: 22rpx;
  height: 22rpx;
}
.post-right{
  width: 35%;
  height: 100%;
  float: left;
  position: relative;
}
.up-row{
  width: 56rpx;
  height: 56rpx;
  border:3rpx solid rgb(223, 223, 223);
  border-radius: 10rpx;
  float: left;
  margin-top: 70rpx;  
  text-align: center 
}
.up-row image{
  width: 35rpx;
  height: 35rpx;
  display: inline-block;
  margin-top: 10rpx;
}
.post-toDetail{
  width: 140rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 10rpx;
  border:3rpx solid rgb(223, 223, 223);
  font-size: 26rpx; 
  float: right;    
  background: white;
  text-align: center;
  position: absolute;
  top: 30rpx;
  right: 60rpx;                  
}
.gg-btn{
  background-color: rgb(230, 67, 64);
  border-color: rgb(230, 67, 64);
  color: white;
}
.wrz-btn{
  color: rgb(136, 136, 136);
}

.margin-right-20 {
  margin-right: 20rpx;
}

.job-title-des {
  height: 70rpx;
  line-height: 70rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 0 30rpx; 
  border: 1rpx solid rgb(217, 217, 217);
  background-color: #f7f7f7;
}

.job-title {
  font-size: 26rpx;
  color: rgb(53, 53, 53);
}

.job-time {
  font-size: 22rpx;
  color: rgb(136, 136, 136);
}