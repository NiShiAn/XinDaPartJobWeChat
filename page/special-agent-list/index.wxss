/**index.wxss**/
.container {
  background-color: #fcf9fe;
  min-height: 100%;
  overflow-x: hidden;
}
.search-container{
  height: 74rpx;
  width: 100%;
  background: #efeff4;
  padding-top:14rpx;
  position: relative;
}
.search-img{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top:28rpx;
  left: 32rpx;
}
.search-input{
  width: 86%;
  padding-left: 8%;
  height: 60rpx;
  background: white;
  margin-left: 3%;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: black;
}
.spa-list{
  width: 100%;
}
.spa-item{
  width: 92%;
  margin: 14rpx auto;
  height: 268rpx;
}
.spa-img{
  width: 100%;
  height: 268rpx;
  border-radius: 10rpx;
  position: relative;
}
.title{
  font-size: 28rpx;
  color: rgb(255, 255, 255);
  font-weight: bold;
  position: absolute;
  top:160rpx;
  left:20rpx
}
.bottom{
  width: 100%;
  height: 60rpx;
  background: rgba(0, 0, 0, .6);
  position: absolute;
  bottom:0;
  left:0;
}
.time{
  font-size: 24rpx;
  font-family: "MicrosoftYaHei";
  color: rgb(255, 255, 255);
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 20rpx;
  float: left;
}
.pay{
  font-size: 24rpx;
  font-family: "MicrosoftYaHei";
  color: rgb(255, 255, 255);
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  margin-right: 20rpx;
  float: right;
}