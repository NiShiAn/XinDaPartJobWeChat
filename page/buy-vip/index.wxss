/**index.wxss**/
.container {
  background-color: #fff;
  min-height: 100%;
  overflow-x: hidden;
}
.vips{
  width: 100%;
  margin: 30rpx auto;
  height: 420rpx;

}
.vip{
  width: 45%;
  height: 200rpx;
  border:3rpx solid  #d6d6d6;
  border-radius: 10rpx;
  margin: 20rpx 2% 0  2%;
  overflow: hidden;
  float: left;
}
.selected{
  border:3rpx solid  rgb(230, 67, 64);
}
.v-name{
  font-size: 34rpx;
  font-family: "MicrosoftYaHei";
  color: rgb(53, 53, 53);
  font-weight: bold;
  display: block;
  width: 96%;
  height: 64rpx;
  line-height: 90rpx;
  margin-left: 4%;
}
.v-type{
  font-size: 32rpx;
  font-family: "MicrosoftYaHei";
  color: rgb(53, 53, 53);
  font-weight: bold;
  display: inline-block;
  height: 64rpx;
   width: 96%;
   margin-left: 4%;
}
.v-type span{
  font-size: 28rpx;
  font-family: "MicrosoftYaHei";
  color: #999;
  display: inline-block;
  font-weight: 300;
}
.v-bottom{
  width: 98%;
  height: 70rpx;
   background-color: #f2f2f2;
   text-align: right;
   padding-right: 4%;
}
.b-selected{
  background-color: rgb(214, 73, 73);
}
.o-price{
  font-size: 22rpx;
  color: rgb(0, 0, 0);
}
.b-selected .o-price{
  color: rgb(255, 255, 255);
}
.n-price{
  font-size: 32rpx;
  color: rgb(0, 0, 0);
  font-weight: bold;
}
.b-selected .n-price{
  color: rgb(255, 255, 255);
}

.vip-detail{
  width: 100%;
  height: 470rpx;
  padding-top: 30rpx;
}
.title{
  width:92%;
  padding-left: 4%;
  padding-right: 4%;
  background: #efeff4;
  height: 78rpx;
  line-height: 78rpx;
  font-size: 34rpx;
  color: rgb(53, 53, 53);
  margin-bottom: 30rpx;
}
.block{
  width: 92%;
  padding-left: 4%;
  padding-right: 4%;
}
.left{
  width: 32%;
  border-right: 2rpx solid #d6d6d6;
  border-bottom: 2rpx solid #d6d6d6;
  height: 150rpx;
  float: left;
}
.center{
  width: 32%;
  border-right: 2rpx solid #d6d6d6;
  border-bottom: 2rpx solid #d6d6d6;
  height: 150rpx;
  float: left;
}
.right{
  width: 32%;
  border-bottom: 2rpx solid #d6d6d6;
  height: 150rpx;
  float: left;
}
.value{
  display: block;
  height: 74rpx;
  width: 100%;
  text-align: center;
  font-size: 22rpx;
  color: rgb(53, 53, 53);
  line-height: 90rpx;
}
.value span{
  font-size: 35rpx;
  font-weight: bold;
}
.text{
  display: block;
  height: 76rpx;
  width: 100%;
  text-align: center;
  font-size: 26rpx;
  color: rgb(136, 136, 136);
}
.vip-pay{
  width: 92%;
  height: 98rpx;
  background: #e24545;
  padding-left: 4%;
  padding-right: 4%;
  position: fixed;
  bottom:0;
}
.p-price{
  display: inline-block;
  width: 50%;
  height: 98rpx;
  line-height: 98rpx;
  color: white;
  font-size: 24rpx;
}
.p-price span{
  font-size: 36rpx;
  font-weight: bold;
}
.p-btn{
  float: right;
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 30rpx;
  background-color: rgb(255, 255, 255);
  color: rgb(230, 67, 64);
  border-radius: 10rpx;
  margin-top: 19rpx;
}